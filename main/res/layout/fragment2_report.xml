    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Report_Form"
        android:text="Report Form"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:textSize="14dp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal">
        <TextView
            android:id="@+id/Report_form_time"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Time of loss:"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/Report_form_time_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textSize="10dp"
            android:text="@string/click"
            android:textStyle="bold"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal">
        <TextView
            android:id="@+id/Report_form_location"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Location:"
            android:textStyle="bold"
            android:layout_marginLeft="50dp"
            />
        <EditText
            android:id="@+id/Report_form_location_input"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:hint="@string/hint"
            android:textSize="12dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal">
        <TextView
            android:id="@+id/Report_form_detail"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Detail Info:"
            android:layout_marginLeft="50dp"
            android:textStyle="bold"
            />
        <EditText
            android:id="@+id/Report_form_detail_input"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:hint="@string/hint2"
            android:textSize="12dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal">
        <TextView
            android:id="@+id/Photo_form_detail"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="@string/photo"
            android:layout_marginLeft="50dp"
            android:textStyle="bold"
            />
        <Button
            android:id="@+id/Report_button_picture"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:background="@drawable/click3"
            android:onClick="UpdatePhoto"
            android:text="@string/select" />

    </LinearLayout>


    <Button
        android:id="@+id/Report_button_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@drawable/click3"
        android:text="Submit" />

